
# Makefile for AIX 7 using gcc

CC       = gcc
CFLAGS   = -O2 -std=gnu99
LDFLAGS  = -lm
TARGET   = netperf
SRC      = combined-latency-jitter.c

all: $(TARGET)

$(TARGET): $(SRC)
	$(CC) $(CFLAGS) -o $(TARGET) $(SRC) $(LDFLAGS)

clean:
	rm -f $(TARGET) *.o core

run-server:
	./$(TARGET) -s

run-client:
	./$(TARGET) -c 127.0.0.1 -n 50 -l 512 -u
